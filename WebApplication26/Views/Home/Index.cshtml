@{
    ViewData["Title"] = "Home Page";
}
<style>
    .div1 {
        padding: 10px;
        border: 5px solid gray;
        margin: 0;
        background-color: black;
        color: gold;
        
    }

    .heading {
      
        font-size: xx-large;
        color: black;
        font-style: italic;
