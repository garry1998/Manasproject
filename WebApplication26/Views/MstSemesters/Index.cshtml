@model IEnumerable<WebApplication26.Models.MstSemester>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PkSemId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PkSemId">Details</a> |
                    @if (@Context.Session.GetString("Type") == "3")
                    {
                        <a asp-action="Delete" asp-route-id="@item.PkSemId">Delete</a>}
                </td>
            </tr>
        }
    </tbody>
</table>
